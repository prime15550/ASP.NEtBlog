@model ModelMakaleIndex


<div id="colorlib-main">
    <section class="ftco-section ftco-no-pt ftco-no-pb">
        <div class="container">
            <div class="row d-flex">
                <div class="col-xl-8 py-5 px-md-5">
                    <div class="row pt-md-4">
                        @foreach (var i in @Model.liste)
                        {
                            <div class="col-md-12">
                                <div class="blog-entry ftco-animate d-md-flex">
                                    <a href="~/Single/index/@i.id" class="img img-2" style="background-image: url(../@i.resimUrl)"></a>
                                    <div class="text text-2 pl-md-4">
                                        <h3 class="mb-2"><a href="~/Single/index/@i.id">@i.baslik</a></h3>
                                        <div class="meta-wrap">
                                            <p class="meta">
                                                <span><i class="icon-calendar mr-2"></i>@i.UploDateTime.Value.Day/@i.UploDateTime.Value.Month/@i.UploDateTime.Value.Year</span>
                                                
                                                        <span><a><i class="icon-folder-o mr-2"></i>@i.kategori</a></span>
                                                  


                                                
                                                <span><i class="icon-comment2 mr-2"></i>@i.yorumSayisi</span>
                                            </p>
                                        </div>
                                        <p class="mb-4">@if (i.aciklama.Length<200)
                                                        {
                                                            @i.aciklama
                                                        }
                                                        else
                                                        {
                                                             @i.aciklama.Substring(0, 200)
                                                            
                                                        }...</p>
                                        <p><a href="~/Single/index/@i.id" class="btn-custom">Daha <span class="ion-ios-arrow-forward"></span></a></p>
                                    </div>
                                </div>
                            </div>
                        }
                        

                    </div><!-- END-->
                    
                </div>
                <!-- END COL -->
            </div>
        </div>
    </section>
</div>